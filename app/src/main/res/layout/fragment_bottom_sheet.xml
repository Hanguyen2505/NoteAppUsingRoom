<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_miscellaneous"
    tools:context=".ui.fragments.note.BottomSheetFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_remove"/>

    <TextView
        android:id="@+id/text_miscellaneous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Miscellaneous"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:textColor="@color/yellow"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/color_note_gray"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_note_color"/>

            <ImageView
                android:id="@+id/icon_done_gray"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/color_note_yellow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_note_color_yellow"/>

            <ImageView
                android:id="@+id/icon_done_yellow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/ic_done"
                 />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/color_note_red"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_note_color_red"/>

            <ImageView
                android:id="@+id/icon_done_red"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                 />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/color_note_blue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_note_color_blue"/>

            <ImageView
                android:id="@+id/icon_done_blue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                 />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/color_note_black"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_note_color_black"/>

            <ImageView
                android:id="@+id/icon_done_black"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                 />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/color_note_white"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_note_color_white"/>

            <ImageView
                android:id="@+id/icon_done_white"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                 />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:text="Delete"
            android:textColor="@color/yellow"
            android:textSize="18dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:text="Image"
            android:textColor="@color/yellow"
            android:textSize="18dp" />



    </LinearLayout>



</LinearLayout>